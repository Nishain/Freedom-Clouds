<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="RoundedLinearLayout">
        <attr name="outlineRadius" format="dimension" />
        <attr name="topOutlineRadius" format="dimension" />
        <attr name="bottomOutlineRadius" format="dimension" />
        <attr name="bgColor" format="color" />
    </declare-styleable>
    <declare-styleable name="InsetSafeLinearLayout">
        <attr name="placement" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ActionButton">
        <attr name="colorTheme" format="color" />
    </declare-styleable>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="android:screenOrientation">portrait</item>
        <item name="windowSplashScreenBackground">#f96718</item>
        <item name="splashScreenIconSize">258dp</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AlertTop" parent="AppTheme">
        <item name="android:windowBackground">@color/transparentBlack</item>
    </style>

    <style name="AlertBottom" parent="AppTheme">
        <item name="android:windowBackground">@color/transparentBlack</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ImageView.Round" parent="AppTheme">
        <item name="cornerSize">20%</item>
    </style>


    <style name="SettingsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/beautyGreen</item>
        <item name="android:colorForeground">@color/beautyOrange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
