<?xml version="1.0" encoding="utf-8"?>
<com.ndds.freedomclouds.common.RoundedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    app:topOutlineRadius="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Password please!"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passcodeKeypadDisplay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/passcode_mask_display"
        android:enabled="false"
        android:gravity="center"
        android:inputType="numberPassword"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="35sp" />
    <com.ndds.freedomclouds.common.InsetSafeLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:placement="bottom">
        <TableLayout
            android:id="@+id/passcodeKeypadGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="1"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="2"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="3"
                    android:textSize="35sp" />
            </TableRow>

            <TableRow>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="4"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="5"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="6"
                    android:textSize="35sp" />
            </TableRow>

            <TableRow>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="7"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="8"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="9"
                    android:textSize="35sp" />
            </TableRow>

            <TableRow
                android:gravity="end">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="0"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:text="DEL"
                    android:textSize="25sp" />
            </TableRow>
        </TableLayout>
    </com.ndds.freedomclouds.common.InsetSafeLinearLayout>

</com.ndds.freedomclouds.common.RoundedLinearLayout>