<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/settings_change_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Change start Date"
            android:textAllCaps="false"
            app:colorTheme="@color/beautyBlue" />

        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/settings_reset_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="reset to today"
            app:colorTheme="@color/beautyBlue" />
    </TableRow>

    <com.ndds.freedomclouds.common.ActionButton
        android:id="@+id/settings_developer_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Developer Notice"
        app:colorTheme="@color/beautyGreen" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="Ambient Light Responsive" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_ambient_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SettingsSwitch"
            android:thumb="@drawable/ambient_light_switch_thumb"
            app:track="@drawable/ambient_light_switch_track" />
    </TableRow>

    <com.ndds.freedomclouds.common.ActionButton
        android:id="@+id/reset_memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Reset App"
        app:colorTheme="@color/beautyGreen" />

    <com.ndds.freedomclouds.common.ActionButton
        android:id="@+id/rate_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@android:drawable/star_big_on"
        android:drawableRight="@android:drawable/star_big_on"
        android:drawableTint="@android:color/white"
        android:paddingHorizontal="20dp"
        android:text="Rate this app"
        app:colorTheme="@color/beautyOrange" />

    <TextView
        android:id="@+id/versionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Version"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>