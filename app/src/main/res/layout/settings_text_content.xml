<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:textSize="15sp"
        android:text="@string/text_settings_header" />
    <EditText
        android:id="@+id/eventTitleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Title name" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/removeEventTitle"
            android:layout_weight="1"
            app:colorTheme="@color/alertRed"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove title" />
        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/enableEventTitle"
            android:layout_weight="1"
            app:colorTheme="@color/beautyGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add title" />
    </TableRow>
    <EditText
        android:id="@+id/eventDescriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginTop="12dp"
        android:hint="Description..." />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/removeEventDescription"
            android:layout_weight="1"
            app:colorTheme="@color/alertRed"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Description" />
        <com.ndds.freedomclouds.common.ActionButton
            android:id="@+id/enableEventDescription"
            android:layout_weight="1"
            app:colorTheme="@color/beautyGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Description" />
    </TableRow>
</LinearLayout>