<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="#68000001"/>

        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress"  android:right="5dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="5dp" android:bottomRightRadius="5dp" android:topRightRadius="5dp"/>
                <solid android:color="@color/beautyGreen"/>
            </shape>
        </scale>
    </item>
</layer-list>